    h2 Propriedades @keyframes
    pre
      code.
        .box {
        animation-name: bounce;
        animation-duration: 4s;
        animation-iteration-count: 10;
        animation-direction: alternate;
        animation-timing-function: ease-out;
        animation-fill-mode: forwards;
        animation-delay: 2s;
        }
